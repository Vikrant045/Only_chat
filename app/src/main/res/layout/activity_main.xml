<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="@dimen/_130sdp"        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/logo_splash"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only Chat"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/spartan_bold"
            android:textSize="@dimen/_20sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Start the Chat with your favourite persons."
            android:textColor="@color/white"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/spartan_thin"
            android:textSize="@dimen/_13sdp"/>
        <ProgressBar
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Developed By"
            android:layout_marginTop="@dimen/_170sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/spartan_thin"
            android:textSize="@dimen/_9sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" VIKRANT and SIDDHANT"
            android:textColor="@color/white"
            android:fontFamily="@font/spartan_regular"
            android:textSize="@dimen/_10sdp"/>
    </LinearLayout>




</RelativeLayout>